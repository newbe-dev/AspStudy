@using AspStudy2.ViewModels
@model RegisterViewModel
@{
	Layout = "_LoginLayout";
}

<main class="d-flex w-100">
	<div class="container d-flex flex-column">
		<div class="row vh-100">
			<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
				<div class="d-table-cell align-middle">

					<div class="text-center mt-4">
						<h1 class="h2">Get started</h1>
						<p class="lead">
							회원가입
						</p>
					</div>

					<div class="card">
						<div class="card-body">
							<div class="m-sm-4">
								<form method="post" asp-controller="Login" asp-action="Register">
									<div class="mb-3">
										<label class="form-label fw-bold">아이디</label>
										<input type="text" class="form-control form-control-lg" asp-for="UserId" />
										<span class="text-danger" asp-validation-for="UserId"></span>
									</div>
									<div class="mb-3">
										<label class="form-label fw-bold">비밀번호</label>
										<input type="password" class="form-control form-control-lg" asp-for="Password" />
										<i class="bi bi-shield-lock align-content-end"></i>
										<span class="text-danger" asp-validation-for="Password"></span>
									</div>
									<div class="mb-3">
										<label class="form-label fw-bold">비밀번호 재확인</label>
										<input type="password" class="form-control form-control-lg" asp-for="ConfirmPassword" />
										<i class="bi bi-shield-check align-content-end"></i>
										<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
									</div>
									<div class="mb-3">
										<label class="form-label fw-bold">이름</label>
										<input type="text" class="form-control form-control-lg" asp-for="Name" />
										<span class="text-danger" asp-validation-for="Name"></span>
									</div>
									<div class="mb-3">
										<label class="form-label fw-bold">이메일</label>
										<input type="text" class="form-control form-control-lg" asp-for="Email" />
										<span class="text-danger" asp-validation-for="Email"></span>
									</div>
									<button type="submit" class="btn btn-lg btn-primary">가입하기</button>
								</form>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</main>