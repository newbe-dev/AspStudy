@using AspStudy2.ViewModels
@model LoginViewModel
@{
	Layout = "_LoginLayout";
}

<main class="d-flex w-100">
	<div class="container d-flex flex-column">
		<div class="row vh-100">
			<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
				<div class="d-table-cell align-middle">

					<div class="text-center mt-4">
						<h1 class="h2">시작해 보세요.</h1>
						<p class="lead">
							로그인
						</p>
					</div>

					<div class="card">
						<div class="card-body">
							<div class="m-sm-4">
								<form method="post" asp-controller="Login" asp-action="Login">
									<div class="mb-3">
										<label class="form-label fw-bold">아이디</label>
										<input type="text" class="form-control form-control-lg" type="text" placeholder="아이디" asp-for="UserId" />
										<span class="text-danger" asp-validation-for="UserId"></span>
									</div>
									<div class="mb-3">
										<label class="form-label fw-bold">비밀번호</label>
										<input class="form-control form-control-lg" type="password" placeholder="비밀번호" asp-for="Password" />
										<span class="text-danger" asp-validation-for="Password"></span>
										<small>
											<a name="RedirectToRegisterBtn">회원이 아니신가요?</a>
											@Html.ActionLink("RedirectToRegisterBtn", "Register", "Login")
										</small>
									</div>
									<div>
										<label class="form-check">
											<input class="form-check-input" type="checkbox" value="remember-me" name="remember-me" asp-for="RememberFlag">
											<span class="form-check-label">
												로그인 상태 유지
											</span>
										</label>
									</div>
									<div class="text-center mt-3">
										<button type="submit" class="btn btn-lg btn-primary">로그인</button>
									</div>
								</form>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</main>